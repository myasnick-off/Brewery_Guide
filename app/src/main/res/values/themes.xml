<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BreweryGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_brown_medium</item>
        <item name="colorPrimaryVariant">@color/color_brown_dark</item>
        <item name="colorOnPrimary">@color/color_brown_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_yellow_medium</item>
        <item name="colorSecondaryVariant">@color/color_yellow_dark</item>
        <item name="colorOnSecondary">@color/color_yellow_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="progressBarStyle">@style/myProgressBar</item>
    </style>

    <style name="commonImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:alpha">@string/alpha_50</item>
    </style>
    
    <style name="commonTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>

    <style name="headerTextStyle" parent="commonTextStyle">
        <item name="android:alpha">@string/alpha_50</item>
    </style>

    <style name="titleTextStyle" parent="commonTextStyle">
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="myProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">?colorPrimaryVariant</item>
    </style>
</resources>